#!/bin/bash
set -e

usage() {
	echo "git pr <show|list|log|cherry-pick|fetch> ..."
	exit $1
}

case "$1" in
--help|-h|--usage|-\?)
	usage 0
	;;
esac

if [ $# -lt 1 ]; then
	usage 1 1>&2
fi

cmd=$1 && shift

case "$cmd" in
show|list|log|fetch|cherry)
	cmd=${cmd}-pr
	;;
cp|cherry-pick)
	cmd=cherry-pr
	;;
help)
	[ $# -lt 1 ] && echo zonk && usage 0 || :
	exec git-${1}-pr --help
	;;
*)
	usage 1 1>&2
	;;
esac

for x in "$@" ; do
	case "$x" in
	--help|-h|--usage|-\?)
		exec git-${cmd} --help
		;;
	esac
done

exec git ${cmd} "$@"
